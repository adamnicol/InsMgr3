<UserControl x:Class="InsMgr3.Controls.EmoticonMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    
    <UserControl.Resources>
        <Style TargetType="Button" >
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="Border" BorderThickness="1">
                            <ContentPresenter Margin="3" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="Black" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Grid.Column="0" ToolTip=":o">
            <Image Source="/Resources/Emoticons/Emoticon_Amazed.gif" />
        </Button>
        <Button Grid.Row="0" Grid.Column="1" ToolTip=":D">
            <Image Source="/Resources/Emoticons/Emoticon_BigSmile.gif" />
        </Button>
        <Button Grid.Row="0" Grid.Column="2" ToolTip=":s">
            <Image Source="/Resources/Emoticons/Emoticon_Confused.gif" />
        </Button>
        <Button Grid.Row="0" Grid.Column="3" ToolTip=":&amp;">
            <Image Source="/Resources/Emoticons/Emoticon_Cool.gif" />
        </Button>
        <Button Grid.Row="0" Grid.Column="4" ToolTip=":'(">
            <Image Source="/Resources/Emoticons/Emoticon_Cry.gif" />
        </Button>
        <Button Grid.Row="0" Grid.Column="5" ToolTip=":$">
            <Image Source="/Resources/Emoticons/Emoticon_Embarrassed.gif" />
        </Button>
        <Button Grid.Row="1" Grid.Column="0" ToolTip="(l)">
            <Image Source="/Resources/Emoticons/Emoticon_Laugh.gif" />
        </Button>
        <Button Grid.Row="1" Grid.Column="1" ToolTip=":@">
            <Image Source="/Resources/Emoticons/Emoticon_Mad.gif" />
        </Button>
        <Button Grid.Row="1" Grid.Column="2" ToolTip="(n)">
            <Image Source="/Resources/Emoticons/Emoticon_Nuts.gif" />
        </Button>
        <Button Grid.Row="1" Grid.Column="3" ToolTip=":|">
            <Image Source="/Resources/Emoticons/Emoticon_Oh.gif" />
        </Button>
        <Button Grid.Row="1" Grid.Column="4" ToolTip=":(">
            <Image Source="/Resources/Emoticons/Emoticon_Sad.gif" />
        </Button>
        <Button Grid.Row="1" Grid.Column="5" ToolTip=":x">
            <Image Source="/Resources/Emoticons/Emoticon_Sick.gif" />
        </Button>
        <Button Grid.Row="2" Grid.Column="0" ToolTip=":)">
            <Image Source="/Resources/Emoticons/Emoticon_Smile.gif" />
        </Button>
        <Button Grid.Row="2" Grid.Column="1" ToolTip=":^">
            <Image Source="/Resources/Emoticons/Emoticon_Suspicious.gif" />
        </Button>
        <Button Grid.Row="2" Grid.Column="2" ToolTip=":p">
            <Image Source="/Resources/Emoticons/Emoticon_Tongue.gif" />
        </Button>
        <Button Grid.Row="2" Grid.Column="3" ToolTip=":/">
            <Image Source="/Resources/Emoticons/Emoticon_Unsure.gif" />
        </Button>
        <Button Grid.Row="2" Grid.Column="4" ToolTip=":%">
            <Image Source="/Resources/Emoticons/Emoticon_Weird.gif" />
        </Button>
        <Button Grid.Row="2" Grid.Column="5" ToolTip=";)">
            <Image Source="/Resources/Emoticons/Emoticon_Wink.gif" />
        </Button>
    </Grid>
</UserControl>